@page
@model GG_Webbshop.Pages.UserPageModel
@{

}
<h1><i>Min sida</i></h1>

<h4><i>Min information</i></h4>
<hr />






    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>
                            @Model.user.Fullname
                        </h5>
                    
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Om</a>
                            </li>
                            @*<li class="nav-item">
                            
                            </li>*@
                        </ul>
                    </div>
                </div>
            
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Fullständigt namn</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Fullname</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Användarnamn</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Username</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Email</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Telefonnummer</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Phone</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Land</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Country</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Adress</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Model.user.Billingaddress</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>


    <div>
        <a class="btn btn-outline-success" asp-page="Index">Tillbaka till startsidan</a>

        <form method="post">
            <input type="submit" class="btn btn-outline-primary" name="btnAddMore" value="Ändra profil" />
        </form>
        <a class="btn btn-outline-danger" asp-page="DeleteUserView">Ta bort ditt konto</a>
    
    </div>
