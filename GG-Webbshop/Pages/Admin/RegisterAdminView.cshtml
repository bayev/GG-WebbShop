@page
@model GG_Webbshop.Pages.Admin.RegisterAdminViewModel
@{
}
<h1><i>Registrera administratör</i></h1>

<h4><i>information</i></h4>
<hr />
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    @Model.SuccessMessage
    <br />
    <a class="btn btn-success" href="https://localhost:44384/index">Klicka här för att komma åter till startsidan</a>
    <a class="btn btn-success" href="https://localhost:44384/admin/index">Klicka här för att komma åter till startsidan för administratörer</a>
}

else
{
    <div class="row">
        <div class="col-md-4">
            <form method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {@Model.ErrorMessage}
                    <label class="control-label">Användarnamn</label>
                    <input asp-for="User.Username" class="form-control" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="control-label"></label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(Model.ValidMailMessage))
                    {@Model.ValidMailMessage}
                </div>
                <div class="form-group">
                    <label class="control-label">Lösenord</label>
                    <input asp-for="User.Password" type="password" class="form-control" pattern=".{8,}" required title="Minst 8 tecken" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input style="width : 200px" type="submit" value="Registrera" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-success" asp-page="Index">Tillbaks till startsidan för administratörer</a>
    </div>
}
