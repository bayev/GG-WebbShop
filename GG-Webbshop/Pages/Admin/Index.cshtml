@page
@model GG_Webbshop.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Startsida administratör</h1>
<link rel="stylesheet" href="~/css/AdminStyling.css">

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total försäljning i SEK</h5>
                <p class="card-text">@Model.TotalCash SEK</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Antal registrerade medlemmar</h5>
                <p class="card-text">@Model.TotalMembers st.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Antal ordrar</h5>
                <p class="card-text">@Model.TotalOrders st.</p>
                <a asp-page="/AdminOrderView" class="btn btn-primary">Granska ordrar</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Antal sålda produkter</h5>
                <p class="card-text">@Model.TotalSoldProducts st.</p>
            </div>
        </div>
    </div>
</div>
    <a class="btn btn-outline-primary" asp-page="./RegisterAdminView">Skapa adminstratörkonto</a>
    <a class="btn btn-outline-danger" asp-page="DeleteAdminView">Ta bort konto</a>
    <br />
    <hr />

    <a class="btn btn-outline-primary" asp-page="Create">Lägg till ny produkt</a>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Bild
                </th>
                <th>
                    Namn
                </th>
                <th>
                    Pris
                </th>
                <th>
                    Vikt
                </th>
                <th>
                    Beskrivning
                </th>
                <th>
                    Bildurl
                </th>
                <th>
                    Kategori
                </th>
                <th>
                    Skapad
                </th>
                <th>
                    Lagerstatus
                </th>
                <th>
                    Storlek
                </th>
                <th>
                    Märke
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>
                        <img class="img-fluid img-thumbnail rounded product-image" id="img-iconSize" src="~/img/@Html.DisplayFor(modelItem => item.Image)">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Ändra</a>
                        <a class="btn btn-outline-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">Detaljer</a>
                        <a class="btn btn-outline-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Radera</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

